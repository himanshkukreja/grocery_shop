<!doctype html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="../static/bootstrap.min.css">
    <link rel="stylesheet" href="../static/style_files/navbar.css">
    <link href="https://fonts.googleapis.com/css2?family=Baloo+Tamma+2:wght@600&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Oswald&display=swap" rel="stylesheet">
    <link rel="icon" href="../static/icons/favicon.svg">

    <!-- additional stylings -->
    <style>
        .bd-placeholder-img {
            font-size: 1.125rem;
            text-anchor: middle;
        }

        @media (min-width: 768px) {
            .bd-placeholder-img-lg {
                font-size: 3.5rem;
            }
        }
    </style>

    <title><%=title%></title>
</head>

<body>

    <%- include("navbar") %>

    <main role="main" class="col-md-9 ml-sm-auto col-lg-10 px-md-4 my-4" id="main">
        <div class="container signup col-md-4 my-5">
            <h4 class="heading text-center" style="color: #ec7129;">Contact Us</h4>
            <form action="/signup" method="POST" class="mt-5">

                <!-- name section -->
                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label for="inputEmail4">First Name</label>
                        <input type="text" class="form-control" name="first_name" required="">
                    </div>
                    <div class="form-group col-md-6">
                        <label for="inputPassword4">Last Name</label>
                        <input type="text" class="form-control" name="last_name" required="">
                    </div>
                </div>

                <!-- email section -->
                <div class="form-row">
                    <label for="inputEmail4">Email</label>
                    <input type="email" class="form-control" name="email" required="">
                </div>

                <!-- address section -->
                <div class="form-row">
                    <div class="form-group col-md-3">
                        <label for="inputCity">Continent</label>
                        <select id="continent" class="form-control" onchange="getData(this.value, 'country')"
                            required="" name="continent">
                        </select>
                    </div>
                    <div class="form-group col-md-3">
                        <label for="inputState">Country</label>
                        <select id="country" class="form-control" onchange="getData(this.value, 'state')" required=""
                            name="country">
                        </select>
                    </div>
                    <div class="form-group col-md-3">
                        <label for="inputState">State</label>
                        <select id="state" class="form-control" onchange="getData(this.value, 'city')" required=""
                            name="state">
                        </select>
                    </div>
                    <div class="form-group col-md-3">
                        <label for="inputState">City</label>
                        <select id="city" class="form-control" required="" name="city">
                        </select>
                    </div>
                </div>

                <div class="form-row">
                    <label for="exampleFormControlTextarea1">Query</label>
                    <textarea class="form-control" id="exampleFormControlTextarea1" rows="3"></textarea>
                </div>

                <button type="submit" class="btn btn-lg my-4" style="background-color: #ec7129; color:white;">Submit</button>
            </form>
        </div>

        <%- include("footer.ejs")%>
    </main>

    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="../static/jquery.js"></script>
    <script src="../static/boostrap.pop.js"></script>
    <script type="text/javascript" src="http://ajax.googleapis.com/ajax/libs/jquery/1.10.2/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/feather-icons/4.9.0/feather.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.7.3/Chart.min.js"></script>
    <script src="../static/bootstrap.min.js"></script>
    <script src="../static/js_files/contact.js"></script>
</body>

</html>