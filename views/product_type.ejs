<!doctype html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- favicon -->
    <link rel="icon" href="../static/icons/favicon.svg">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="../static/bootstrap.min.css">
    <link rel="stylesheet" href="../static/style_files/navbar.css">
    <link href="https://fonts.googleapis.com/css2?family=Kumbh+Sans&display=swap" rel="stylesheet">

    <!-- additional stylings -->
    <style>
        .bd-placeholder-img {
            font-size: 1.125rem;
            text-anchor: middle;
        }

        @media (min-width: 768px) {
            .bd-placeholder-img-lg {
                font-size: 3.5rem;
            }
        }
    </style>

    <script>
        if(localStorage.getItem("in_product_view") === "true")
        {
            localStorage.removeItem("product")
            localStorage.removeItem("in_product_view")
        }

        // storing product variable in localstorage
        if (localStorage.getItem("product") === null) {
            localStorage.setItem("in_product_view", "true");
            let product = <%-JSON.stringify(product) %>
            localStorage.setItem("product", JSON.stringify(product));
            localStorage.setItem("page", 1);
            localStorage.setItem("total_page", Math.ceil(product.length / 8))
        }

    </script>

    <title><%=title %></title>
</head>

<body>

    <!-- included navbar using ejs  -->
    <%- include("navbar") %>

    <main role="main" class="col-md-9 ml-sm-auto col-lg-10 px-md-4 my-4" id="main">

        <!-- showing most purchased products -->
        <div class="col-md-10 mx-auto">
            <!-- <h3 class="text-center" style="color: orange; margin-top: 100px;">MOST PURCHASED PRODUCTS</h3> -->
            <div class="d-flex justify-content-end mt-5">
                <button type="button" class="btn btn-warning mx-2" style="border-radius: 20px; color: white;" id="prev"> <img
                        src="../static/icons/back.svg" alt="" style="width: 1.5rem;"> Prev</button>
                <button type="button" class="btn btn-warning mx-2" style="border-radius: 20px; color: white;" id="next">Next <img
                        src="../static/icons/next.svg" alt="" style="width: 1.5rem;"> </button>
            </div>
            <div class="card-deck" id="content">
                <!-- here the actual content comes -->
            </div>
        </div>
        <%- include("footer.ejs")%>
    </main>


    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="../static/jquery.js"></script>
    <script src="../static/boostrap.pop.js"></script>
    <script type="text/javascript" src="http://ajax.googleapis.com/ajax/libs/jquery/1.10.2/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/feather-icons/4.9.0/feather.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.7.3/Chart.min.js"></script>
    <script src="../static/bootstrap.min.js"></script>
    <script src="../static/js_files/product_type.js"></script>
</body>

</html>